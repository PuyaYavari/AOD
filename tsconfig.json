{
    "ts-node": {
      "files": true
    },
    "compilerOptions": {
      "types": [
        "node"
      ],
      "baseUrl": "./",
      "moduleResolution": "node",
      "target": "es6",
      "module": "commonjs",
      "outDir": "./build",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "paths": {
        "~/*": [
          "./*"
        ]
      },
      "typeRoots": [
        "node_modules/@types",
        "@types"
      ],
      "experimentalDecorators": true
    },
    "include": [
      "./**/*"
    ],
    "exclude": [
      "node_modules",
      "build"
    ]
  }
  